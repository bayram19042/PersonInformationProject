@model List<PersonList>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-3">
    <header>

        <nav class="navbar navbar-dark navbar-expand-md bg-warning">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link"  asp-action="Create" asp-controller="Home"><i class="fa fa-plus mr-1"></i>Yeni kullanıcı <span class="sr-only">(current)</span></a>
                    </li>
                   
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>



    </header>
    @if (Model.Count<0)
    {
<div class="alert alert-success" role="alert">
    Kayıt yoktur...
</div>
    }
    else
    {
    <main>
        <div class="container p-0">
            <table class="table table-bordered table-hover mt-3">
                <thead class="bg-success text-white">
                    <tr>
                        <td>İsim</td>
                        <td>Soyisim</td>
                        <td>Email</td>
                        <td>Telefon</td>
                        @foreach (var adres in Model)
                        {
                            <td>Adress</td>
                        }

                    </tr>
                </thead>
                <tbody>
                    @foreach (var personList in Model)
                    {
                    <tr>
                        <td>@personList.Name</td>
                   

                    
                        <td>@personList.Surname</td>
                  

                  
                        <td>@personList.Email</td>
                  

                   
                        <td>@personList.Telephone</td>

                       
                        
                        @foreach(var content in personList.AdressesContent)
                        {
                            <td> @content;</td>
                        }
                        
                       
                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </main>
    }
</div>

